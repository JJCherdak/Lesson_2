<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textSize="56sp"
        android:textColor="#FFBF00"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textSize="56sp"
        android:textColor="#FFBF00"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculation"
        app:layout_constraintBottom_toTopOf="@id/button_clear"
        />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#CCCCFF"
        android:text="@string/button_clear"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toTopOf="@id/button_7"
        app:layout_constraintEnd_toStartOf="@+id/button_delete"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#CCCCFF"
        android:text="@string/button_del"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/button_9"
        app:layout_constraintStart_toEndOf="@+id/button_clear"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DFFF00"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/button_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_clear"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/button_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DFFF00"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/button_8"
        app:layout_constraintStart_toEndOf="@id/button_7"
        app:layout_constraintTop_toTopOf="@id/button_7"
        app:layout_constraintTop_toBottomOf="@id/button_clear"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/button_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DFFF00"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/button_9"
        app:layout_constraintStart_toEndOf="@id/button_8"
        app:layout_constraintTop_toTopOf="@id/button_8"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_delete"/>

    <Button
        android:id="@+id/button_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#CCCCFF"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/button_div"
        app:layout_constraintStart_toEndOf="@id/button_9"
        app:layout_constraintTop_toTopOf="@id/button_9"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_delete"/>

    <Button
        android:id="@+id/button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DFFF00"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/button_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_7"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/button_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DFFF00"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/button_5"
        app:layout_constraintStart_toEndOf="@id/button_4"
        app:layout_constraintTop_toBottomOf="@id/button_8"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/button_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DFFF00"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/button_6"
        app:layout_constraintStart_toEndOf="@id/button_5"
        app:layout_constraintTop_toBottomOf="@id/button_9"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/button_mul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#CCCCFF"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/button_mul"
        app:layout_constraintStart_toEndOf="@id/button_6"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_div"/>

    <Button
        android:id="@+id/button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DFFF00"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/button_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_4"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DFFF00"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/button_2"
        app:layout_constraintStart_toEndOf="@id/button_1"
        app:layout_constraintTop_toBottomOf="@id/button_5"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DFFF00"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/button_3"
        app:layout_constraintStart_toEndOf="@id/button_2"
        app:layout_constraintTop_toBottomOf="@id/button_6"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/button_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#CCCCFF"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/button_sub"
        app:layout_constraintStart_toEndOf="@id/button_3"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_mul"/>

    <Button
        android:id="@+id/button_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#CCCCFF"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/button_point"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_1"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/button_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DFFF00"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/button_0"
        app:layout_constraintStart_toEndOf="@id/button_point"
        app:layout_constraintTop_toBottomOf="@id/button_2"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/button_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#9370DB"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/button_res"
        app:layout_constraintStart_toEndOf="@id/button_0"
        app:layout_constraintTop_toBottomOf="@id/button_3"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#CCCCFF"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="@string/button_add"
        app:layout_constraintStart_toEndOf="@id/button_result"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_sub"/>


</androidx.constraintlayout.widget.ConstraintLayout>